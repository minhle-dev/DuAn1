<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="190dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_sanpham_img"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="@drawable/logo"/>

        <ImageView

            android:layout_marginEnd="2dp"
            android:id="@+id/iv_option_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_option_item"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            />

        <TextView
            android:layout_below="@id/iv_sanpham_img"
            android:padding="5dp"
            android:id="@+id/tv_ten_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten San pham"
            android:textColor="@color/xanhnhe"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />




    </RelativeLayout>


</androidx.cardview.widget.CardView>