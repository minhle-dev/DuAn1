<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtMaHDNhap"
            android:hint="Mã hóa đơn nhập hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp"
            android:inputType="phone"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="20"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            android:focusable="false"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtTenHDNhap"
            android:hint="Tên Hóa Đơn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp"
            android:inputType="textPersonName"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="20"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtSoLuongNhap"
            android:hint="Số lượng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp"

            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtSoTienNhap"
            android:hint="Số Tiền"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp"
            app:met_baseColor="@android:color/darker_gray"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="50"
            app:met_primaryColor="@android:color/darker_gray"
            app:met_singleLineEllipsis="true"
            />
        <TextView
            android:id="@+id/tvNgayNhap"
            android:text="Chọn Ngày Nhập Hàng"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
</LinearLayout>