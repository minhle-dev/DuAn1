<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="195dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_sanpham_img"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@drawable/logo"/>



        <TextView
            android:layout_below="@id/iv_sanpham_img"
            android:padding="2dp"
            android:id="@+id/tv_ten_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten San pham"
            android:textColor="@color/xanhnhe"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView

            android:padding="2dp"
            android:id="@+id/tv_giatien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15000"
            android:textColor="@color/mau_den"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/tv_ten_sanpham"
            />



    </RelativeLayout>


</androidx.cardview.widget.CardView>