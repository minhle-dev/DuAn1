<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mCardView"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:padding="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hoadon" />
            <TextView
                android:id="@+id/tvMaHDNhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="001"
                android:textColor="#555555"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/ivIcon"/>

            <TextView
                android:id="@+id/tvTenHDNhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mua Bo Huc"
                android:textColor="#555555"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/ivIcon"
                android:layout_below="@+id/tvMaHDNhap"/>

            <TextView
                android:id="@+id/tvNgayNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="2dp"
                android:text="20/10"
                android:textColor="#555555"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ivIcon"
                android:layout_below="@+id/tvTenHDNhap"/>
            <TextView
                android:id="@+id/tvSoLuongNhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="2dp"
                android:text="100 chai"
                android:textColor="#67BF7F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ivIcon"
                android:layout_below="@+id/tvNgayNhap"/>
            <TextView
                android:id="@+id/tvGiaTienNhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="2dp"
                android:text="200000"
                android:textColor="#67BF7F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/ivIcon"
                android:layout_below="@+id/tvSoLuongNhap"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_close" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>