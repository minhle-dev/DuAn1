<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".View.ThongKeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/fbutton_color_green_sea"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvDoanhThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text_gr"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/fbutton_color_clouds"
            android:textSize="22sp"></TextView>


        <TextView
            android:id="@+id/tvChiPhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:background="@drawable/rounded_text_gr"

            android:textColor="@color/fbutton_color_clouds"
            android:textSize="22sp"></TextView>


    </LinearLayout>



    <TextView
        android:id="@+id/tvTongTienNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_text_gr"
        android:padding="5dp"
        android:textColor="@color/mau_trang"
        android:gravity="center_horizontal"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/tvTongTienThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTongTienNgay"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_text_gr"
        android:padding="5dp"
        android:textColor="@color/mau_trang"
        android:gravity="center_horizontal"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/tvTongTienNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTongTienThang"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_text_gr"
        android:padding="5dp"
        android:textColor="@color/mau_trang"
        android:gravity="center_horizontal"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTongTienNam"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_text_gr">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  Ngày:"
                android:textColor="@color/mau_trang"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/mau_trang"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btndate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_gr"
                android:text="Chọn ngày"
                android:textColor="@color/mau_trang" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnThongKeNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_text_gr"
        android:text="Thống kê theo ngày"
        android:textColor="@color/mau_trang" />
    <Button
        android:id="@+id/btnThongKeThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnThongKeNgay"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_text_gr"
        android:text="Thống kê theo tháng"
        android:textColor="@color/mau_trang" />
    <Button
        android:id="@+id/btnThongKeNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnThongKeThang"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_text_gr"
        android:text="Thống kê theo Năm"
        android:textColor="@color/mau_trang" />

</RelativeLayout>